{
    "name": "erp-prodotti",
    "title": "Prodotti",
    "description": "Gestione prodotti, varianti e attributi",
    "version": "1.0.0",
    "author": "Microcodice",
    "icon": "box",
    "route": "/prodotti",
    "entrypoint": "admin/ProdottiApp.vue",
    "permission_base": "erp_prodotti",
    "tabs": [
      {
        "id": "elenco",
        "label": "Tutti i prodotti",
        "icon": "layers"
      },
      {
        "id": "categorie",
        "label": "Categorie",
        "icon": "folder"
      },
      {
        "id": "attributi",
        "label": "Attributi",
        "icon": "tag"
      },
      {
        "id": "varianti",
        "label": "Varianti",
        "icon": "box"
      }
    ],
    "dashboard_cards": [
      {
        "id": "tot_prodotti",
        "label": "Totale Prodotti",
        "icon": "package",
        "api": "/erp/v1/prodotti/count",
        "permission": "erp_prodotti_view",
        "color": "#2563eb"
      },
      {
        "id": "valore_magazzino",
        "label": "Valore Magazzino",
        "icon": "dollar-sign",
        "api": "/erp/v1/prodotti/valore",
        "permission": "erp_prodotti_view",
        "color": "#22c55e"
      },
      {
        "id": "prodotti_esaurimento",
        "label": "In Esaurimento",
        "icon": "alert-triangle",
        "api": "/erp/v1/prodotti/esaurimento",
        "permission": "erp_prodotti_view",
        "color": "#facc15"
      },
      {
        "id": "prodotti_esauriti",
        "label": "Esauriti",
        "icon": "x-circle",
        "api": "/erp/v1/prodotti/esauriti",
        "permission": "erp_prodotti_view",
        "color": "#b91c1c"
      }
    ],
    "reports": [
      {
        "id": "vendite_prodotti",
        "label": "Vendite per Prodotto",
        "route": "/report/vendite-prodotti",
        "permission": "erp_prodotti_report",
        "component": "reports/ReportVenditeProdotti.vue"
      }
    ]
  }